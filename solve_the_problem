void solve_the_problem(vector<vector<int>> &cost)
{
	for (int i = 0; i < n; i++) cost[i][i] = 0;
	int delta = 1; // delta = j - i
	while (delta <= n - 1)
	{
		for (int i = 0; i < n - delta; i++)
		{
			int MIN = INT_MAX;
			int j = i + delta;
			for (int k = i; k < j; k++)
			{
				int sum_cost = cost[i][k] + cost[k + 1][j] + matrix[i][0] * matrix[k][1] * matrix[j][1];
				if (sum_cost < MIN) MIN = sum_cost;
			}
			cost[i][j] = MIN;
		}
		delta += 1;
	}
}
